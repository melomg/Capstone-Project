<resources>
    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Nunito">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Text.NunitoSemiBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Text.NunitoSemiBold.H6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.AlegreyaExtraBold">
        <item name="android:fontFamily">@font/alegreya_extrabold</item>
        <item name="fontFamily">@font/alegreya_extrabold</item>
    </style>

    <style name="Text.AlegreyaExtraBold.App">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SearchButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">@dimen/xx_min_size</item>
        <item name="android:paddingEnd">@dimen/xx_min_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>
</resources>